&GLOBAL
  PROJECT cspbi3_cubic_2x2x2
  RUN_TYPE GEO_OPT
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep

  &DFT

    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL

    &MGRID
      CUTOFF 300
      REL_CUTOFF 60
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-7
      MAX_SCF 300

      !&OT
      !  PRECONDITIONER FULL_ALL
      !  MINIMIZER DIIS
      !&END OT

      ADDED_MOS 30
      !CHOLESKY INVERSE
      !&SMEAR ON
      !  METHOD FERMI_DIRAC
      !  ELECTRONIC_TEMPERATURE [K] 300
      !&END SMEAR
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.5
        BETA  0.5
        NBROYDEN 8
      &END MIXING

    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

     &KPOINTS
       SCHEME MONKHORST-PACK 4 4 4
       SYMMETRY  F
     &END KPOINTS

  &END DFT
  &SUBSYS

    &KIND Cs
      ELEMENT Cs
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q9
    &END KIND 
    &KIND Pb
      ELEMENT Pb
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND 
    &KIND I
      ELEMENT I 
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND

    &CELL
      PERIODIC XYZ
      A 12.8282899857         0.0000000000         0.0000000000
      B  0.0000000000        12.8282899857         0.0000000000
      C  0.0000000000         0.0000000000        12.8282899857
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME coord.xyz
      COORD_FILE_FORMAT XYZ
    &END
  &END SUBSYS
&END FORCE_EVAL

&MOTION
 &GEO_OPT
   OPTIMIZER BFGS
   MAX_ITER  550
   MAX_DR    [bohr] 0.002
   MAX_FORCE 3.000E-4
   RMS_DR    [bohr] 0.002
   RMS_FORCE 3.000E-4
   &BFGS
   &END
 &END GEO_OPT
  &PRINT
   &TRAJECTORY
     &EACH
       GEO_OPT 1
     &END EACH
   &END TRAJECTORY
   &FORCES ON
   &END FORCES
   &RESTART
     BACKUP_COPIES 1
     &EACH
       GEO_OPT 1
     &END EACH
   &END RESTART
  &END PRINT
&END MOTION

